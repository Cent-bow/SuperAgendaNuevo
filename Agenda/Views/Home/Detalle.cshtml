    <table cellpadding="10" cellspacing="20" border="1">

        <tr>

            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Telefono Movil</th>
            <th> Telefono Casa</th>
            <th> Telefono Trabajo</th>
            <th> Empresa</th>
            <th> Direccion</th>
            <th> Cedula</th>
