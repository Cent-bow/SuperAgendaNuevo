            <td>@Model.Apellidos</td>

            <td>@Model.TelefonoMovil</td>

            <td>@Model.TelefonoCasa</td>

            <td>@Model.TelefonoTrabajo</td>

            <td>@Model.Empresa</td>

            <td>@Model.Direccion</td>

            <td>@Model.Cedula</td>

            <td>@Model.Correo</td>

            <td>@Model.FechaNacimiento</td>

            <td>@Model.Instagram</td>

            <td>@Model.Facebook</td>

            <td>@Model.PaginaWeb</td>

            <td>@Model.PuestoTrabajo</td>

            <td>@Model.Foto</td>

            <td>@Model.Nota</td>


        </tr>

        <style>
            th {
             
                text-align: center;
            }
        </style>

        

        <style>
            #btn-volver {
                background-color: #1b6ec2;
                font-family: Calibri;
                color: white;
                font-size: larger;
                text-align: center;
                color: #fff;
                border-color: transparent;
                display: inline-block;
                font-weight: 400;
                border-radius: 10px;
                width: 100px;
                box-shadow: aqua;
            }

                #btn-volver:hover {
                    background-color: midnightblue;
                }
        </style>



    </table>


