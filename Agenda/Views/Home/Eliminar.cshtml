@{
@model Agenda.Models.Contacto
}

<form method="post" action="/Home/Eliminar" class="form-horizontal">
    <input type="hidden" name="Id" id="Id" value="@Model.Id" />
    <input type="hidden" name="Nombres" id="Nombres" value="@Model.Nombres" />
    <input type="hidden" name="Apellidos" id="Apellidos" value="@Model.Apellidos" />
    <input type="hidden" name="TelefonoMovil" id="TelefonoMovil" value="@Model.TelefonoMovil" />

    <h1> ¿Esta seguro que desea eliminar el regitro?</h1>
    <button type="submit" class="btn btn-danger">Eliminar Contacto</button>
     <a href="/Home/" name="btn-volver" id="btn-volver">Volver</a>


    <style>
        #btn-volver {
            background-color: #1b6ec2;
            font-family: Calibri;
            color: white;
            font-size: larger;
            text-align: center;
            color: #fff;
            border-radius:5px;
            border-color: transparent;
            display: inline-block;
            font-weight: 400;
            width:100px;
            height:35px;
            box-shadow: aqua;
        }

            #btn-volver:hover {
                background-color: midnightblue;
            }
    </style>

</form>
